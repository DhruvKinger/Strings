#include <iostream>
#include<string.h>
using namespace std;


int main()
{
    char s[]="GeeksforGeeks";
    char t[]="for";
    char *p;
    int pos;
    p=strstr(s,t);
    if(p)
    {
       
        pos=p-s;
        cout<<"Substring 1st occurence starts from index: "<<pos;
         cout<<endl<<p;
    }
    else
    {
        cout<<"Not found";
    }
    return 0;
}
